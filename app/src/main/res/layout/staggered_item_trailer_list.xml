<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <RelativeLayout
        android:id="@+id/rl_item_trailer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/cardItemMargin"
        android:background="@drawable/card"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imv_item_trailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="@dimen/basePadding"
            android:src="@mipmap/ic_play_trailer"
            android:textSize="@dimen/bodyText" />

        <TextView
            android:id="@+id/tv_trailer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imv_item_trailer"
            android:layout_centerHorizontal="true"
            android:background="#000000FF"
            android:gravity="center_horizontal|bottom"
            android:padding="8dp"
            android:textColor="@android:color/black" />
    </RelativeLayout>
</LinearLayout>